@import 'normalize/index.styl'

*
  box-sizing: border-box
  color: hsl(0, 0%, 10%)
  font: 16px/20px 'Work Sans', sans-serif
  margin: 0
  padding: 0

.title
  font-weight: bold

.artist
  opacity: 0.9

.art
  background-color: hsl(210, 50%, 50%)
  background-position: center
  background-repeat: no-repeat
  background-size: cover
  float: left


.app
  display: grid
  grid-template-rows: 3rem auto
  grid-template-columns: 20rem auto
  grid-template-areas: "nav nav" "playlist library"
  height: 100vh
  place-items: stretch / stretch
  place-content: stretch / stretch
  width: 100vw

  &.playlist0
    grid-template-rows: 3rem auto
    grid-template-columns: auto
    grid-template-areas: "nav" "library"


nav
  background: hsl(0, 0%, 30%)
  font-weight: bold
  grid-area: nav

  a
    color: hsl(0, 0%, 70%)
    cursor: pointer
    font-size: 1.5rem
    line-height: 3rem
    padding: 0.5rem
    text-decoration: none

    &:hover
      background: hsl(0, 0%, 50%)
      color: hsl(0, 0%, 90%)

  a.order
    background: hsl(0, 0%, 50%)


.library
  grid-area: library
  overflow-x: hidden
  overflow-y: scroll

  & > div
    cursor: pointer
    display: inline-block
    height: 8rem
    margin: 1rem 0 0 1rem
    overflow: hidden
    position: relative
    width: 16rem

    .title, .artist, .when
      margin-left: 8.5rem
      overflow: hidden
      text-overflow: ellipsis

    .title
      max-height: 3.85rem

    .artist
      max-height: 3.85rem

    .when
      font-size: smaller
      opacity: 0.7

    .art
      height: 8rem
      width: 8rem

  .sep
    background: hsl(0, 0%, 10%)
    border-radius: 0.5rem
    text-align: center

    a
      color: hsl(0, 0%, 90%)
      font-size: 7rem
      line-height: 8rem


.playlist
  background: hsl(0, 0%, 10%)
  color: hsl(0, 0%, 90%)
  font-size: smaller
  grid-area: playlist
  overflow-x: hidden
  overflow-y: scroll
  position: relative

  .item
    cursor: pointer
    height: 2.4rem
    overflow: hidden
    position: relative

    &.active
      height: 3.6rem

  & > div:nth-child(even)
    background: hsl(0, 0%, 90%)
  & > div:nth-child(odd)
    background: hsl(0, 0%, 80%)

  .art
    height: 2rem
    margin: 0.2rem
    width: 2rem

  .artist, .title
    max-height: 1.1rem
    overflow: hidden
    text-overflow: ellipsis

  .playing
    height: 1rem
    margin: 0.2rem
    position: relative
    text-align: right
    width: calc(100% - 0.4rem)

    .bar
      color: hsl(0, 0%, 0%)
      height: 1rem
      left: 0
      position: absolute
      top: 0

      .label
        font-size: smaller

    .total
      background: hsl(240, 50%, 50%)
      right: 0
      z-index: 1

    .buffered
      background: hsl(240, 50%, 70%)
      z-index: 2

    .current
      background: hsl(240, 50%, 30%)
      z-index: 3

  .clear
    background: hsl(0, 100%, 40%)
    border-radius: 0 0 0 0.5rem
    color: hsl(0, 0%, 90%)
    cursor: pointer
    font-size: 2rem
    font-weight: bold
    line-height: 2rem
    height: 2rem
    position: absolute
    right: 0
    text-align: center
    width: 2rem
    z-index: 9


@media all and (max-width: 800px)
  *
    font: 12px/16px 'Work Sans', sans-serif

  .app
    grid-template-columns: 16rem auto


@media all and (max-width: 600px)
  .app
    grid-template-rows: 20rem auto
    grid-template-columns: 3rem auto
    grid-template-areas: "nav playlist" "nav library"

    &.playlist0
      grid-template-rows: auto
      grid-template-columns: 3rem auto
      grid-template-areas: "nav library"

  .library

    & > div
      height: 6rem
      margin: 0.5rem 0 0 0.5rem
      width: 12rem

      .title, .artist
        margin-left: 6.25rem

      .art
        float: left
        height: 6rem
        width: 6rem

    .sep
      font-size: 5rem
      line-height: 6rem
